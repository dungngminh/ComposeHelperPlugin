<idea-plugin>
    <id>com.thelumiereguy.composeplugin.ComposePlugin</id>
    <name>ComposeHint</name>
    <vendor email="piyushvp1@gmail.com" url="https://www.google.com">thelumiereguy</vendor>

    <description><![CDATA[
    A simple plugin to show hints around composables to wrap it with other composables.
    ]]></description>

    <!-- please see https://plugins.jetbrains.com/docs/intellij/plugin-compatibility.html
         on how to target different products -->
    <depends>org.jetbrains.kotlin</depends>
    <depends>com.intellij.modules.java</depends>


    <extensions defaultExtensionNs="com.intellij">

        <intentionAction id="wrap_composable" order="first">
            <className>com.thelumiereguy.composeplugin.intention.presentation.intentions.WrapWithComposableIntention</className>
            <category>Composable intentions</category>
        </intentionAction>

        <intentionAction id="wrap_box" order="after wrap_composable">
            <className>com.thelumiereguy.composeplugin.intention.presentation.intentions.WrapWithBoxIntention</className>
            <category>Composable intentions</category>
        </intentionAction>

        <intentionAction id="wrap_card" order="after wrap_box">
            <className>com.thelumiereguy.composeplugin.intention.presentation.intentions.WrapWithCardIntention</className>
            <category>Composable intentions</category>
        </intentionAction>

        <intentionAction id="wrap_column" order="after wrap_card">
            <className>com.thelumiereguy.composeplugin.intention.presentation.intentions.WrapWithColumnIntention</className>
            <category>Composable intentions</category>
        </intentionAction>

        <intentionAction id="wrap_row" order="after wrap_column">
            <className>com.thelumiereguy.composeplugin.intention.presentation.intentions.WrapWithRowIntention</className>
            <category>Composable intentions</category>
        </intentionAction>
    </extensions>

</idea-plugin>
