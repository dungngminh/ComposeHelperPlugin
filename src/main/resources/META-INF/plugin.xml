<idea-plugin>
    <id>com.thelumiereguy.compose_helper</id>
    <name>Compose Helper</name>
    <vendor email="piyushvp1@gmail.com" url="https://github.com/thelumiereguy">thelumiereguy</vendor>
    <version>1.0.2</version>
    <description><![CDATA[
    A simple plugin to wrap your <a href="https://developer.android.com/jetpack/compose/">Composables</a> with another Composable. </br> </br>
    Just keep your caret in the Editor on the composable, and <b>press on the yellow bulb on the left, or press Alt+Enter to show hints/intentions</b>. </br></br>
    You can choose to - </br>
    <ul>
        <li> Wrap with Box</li>
        <li> Wrap with Card</li>
        <li> Wrap with Column</li>
        <li> Wrap with Row</li>
        <li> Wrap with LazyColumn</li>
        <li> Wrap with LazyRow</li>
        <li> Remove the composable altogether</li>
      </ul>
    ]]></description>

    <!-- please see https://plugins.jetbrains.com/docs/intellij/plugin-compatibility.html
         on how to target different products -->
    <depends>org.jetbrains.kotlin</depends>
    <depends>com.intellij.modules.java</depends>
    <depends>com.intellij.modules.platform</depends>


    <extensions defaultExtensionNs="com.intellij">

        <intentionAction id="wrap_box" order="first">
            <className>com.thelumiereguy.compose_helper.intention.presentation.intentions.WrapWithBoxIntention
            </className>
            <category>Composable intentions</category>
        </intentionAction>

        <intentionAction id="wrap_card" order="after wrap_box">
            <className>com.thelumiereguy.compose_helper.intention.presentation.intentions.WrapWithCardIntention
            </className>
            <category>Composable intentions</category>
        </intentionAction>

        <intentionAction id="wrap_column" order="after wrap_card">
            <className>com.thelumiereguy.compose_helper.intention.presentation.intentions.WrapWithColumnIntention
            </className>
            <category>Composable intentions</category>
        </intentionAction>

        <intentionAction id="wrap_row" order="after wrap_column">
            <className>com.thelumiereguy.compose_helper.intention.presentation.intentions.WrapWithRowIntention
            </className>
            <category>Composable intentions</category>
        </intentionAction>

        <intentionAction id="wrap_lazy_column" order="after wrap_row">
            <className>com.thelumiereguy.compose_helper.intention.presentation.intentions.WrapWithLzyColumnIntention
            </className>
            <category>Composable intentions</category>
        </intentionAction>

        <intentionAction id="wrap_lazy_row" order="after wrap_lazy_column">
            <className>com.thelumiereguy.compose_helper.intention.presentation.intentions.WrapWithLzyRowIntention
            </className>
            <category>Composable intentions</category>
        </intentionAction>

        <intentionAction id="remove_composable" order="after wrap_lazy_row">
            <className>com.thelumiereguy.compose_helper.intention.presentation.intentions.RemoveComposableIntention
            </className>
            <category>Composable intentions</category>
        </intentionAction>
    </extensions>

</idea-plugin>
