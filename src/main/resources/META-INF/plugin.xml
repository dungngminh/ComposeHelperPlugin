<idea-plugin>
    <id>com.thelumiereguy.composeplugin.ComposePlugin</id>
    <name>ComposeHint</name>
    <vendor email="piyushvp1@gmail.com" url="https://www.google.com">thelumiereguy</vendor>

    <description><![CDATA[
    A simple plugin to show hints around composables to wrap it with other composables.
    ]]></description>

    <!-- please see https://plugins.jetbrains.com/docs/intellij/plugin-compatibility.html
         on how to target different products -->
    <depends>org.jetbrains.kotlin</depends>
    <depends>com.intellij.modules.java</depends>


    <extensions defaultExtensionNs="com.intellij">

        <intentionAction id="wrap_box" order="first">
            <className>com.thelumiereguy.composeplugin.intention.presentation.intentions.WrapWithBoxIntention
            </className>
            <category>Composable intentions</category>
        </intentionAction>

        <intentionAction id="wrap_card" order="after wrap_box">
            <className>com.thelumiereguy.composeplugin.intention.presentation.intentions.WrapWithCardIntention
            </className>
            <category>Composable intentions</category>
        </intentionAction>

        <intentionAction id="wrap_column" order="after wrap_card">
            <className>com.thelumiereguy.composeplugin.intention.presentation.intentions.WrapWithColumnIntention
            </className>
            <category>Composable intentions</category>
        </intentionAction>

        <intentionAction id="wrap_row" order="after wrap_column">
            <className>com.thelumiereguy.composeplugin.intention.presentation.intentions.WrapWithRowIntention
            </className>
            <category>Composable intentions</category>
        </intentionAction>

        <intentionAction id="wrap_lazy_column"  order="after wrap_row">
            <className>com.thelumiereguy.composeplugin.intention.presentation.intentions.WrapWithLzyColumnIntention
            </className>
            <category>Composable intentions</category>
        </intentionAction>

        <intentionAction id="wrap_lazy_row"  order="after wrap_lazy_column">
            <className>com.thelumiereguy.composeplugin.intention.presentation.intentions.WrapWithLzyRowIntention
            </className>
            <category>Composable intentions</category>
        </intentionAction>

        <intentionAction id="remove_composable"  order="after wrap_lazy_row">
            <className>com.thelumiereguy.composeplugin.intention.presentation.intentions.RemoveComposableIntention
            </className>
            <category>Composable intentions</category>
        </intentionAction>
    </extensions>

</idea-plugin>
